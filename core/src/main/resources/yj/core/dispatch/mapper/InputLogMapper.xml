    <insert id="insertInputLog" parameterType="yj.core.dispatch.dto.InputLog">
        INSERT INTO confirmation_input_log(
        id,barcode,orderno,dispatch,operation,yeild,work_scrap,row_scrap,classno,classgrp,shop_code,line,model_no,posting_date,plant,
        attr1,attr2,attr3,attr4,attr5,attr6,attr7,attr8,attr9,attr10,attr11,attr12,attr13,attr14,attr15
        )
        VALUES (
        #{id},#{barcode}, #{orderno},#{dispatch},
        #{operation},#{yeild},#{workScrap},#{rowScrap},#{classno},#{classgrp},#{shopCode},#{line},#{modelNo},#{postingDate},#{plant},
        #{attr1},#{attr2},#{attr3},#{attr4},#{attr5},#{attr6},#{attr7},#{attr8},#{attr9},#{attr10},#{attr11},#{attr12},#{attr13},#{attr14},#{attr15}
        )
    </insert>

    <select id="queryAllBg" resultMap="BaseResultMap" parameterType="yj.core.dispatch.dto.InputLog">
        SELECT
        il.id,
        il.orderno,
        il.operation,
        il.CREATION_DATE,
        il.posting_date,
        il.yeild,
        il.work_scrap,
        il.row_scrap,
        il.classgrp,
        il.model_no,
        il.line,
        il.plant,
        il.CREATED_BY,
        r.mat_desc,
        r.material,
        u.user_name

        FROM confirmation_input_log il,confirmation_result r,sys_user u,confirmation_log l
        <where>
            il.id= r.input_id
            AND il.CREATED_BY = u.user_id
            AND l.ref_id = il.id
            AND r.is_reversed ='0'
            AND l.tran_type = '0'
            AND l.msgty = 'S'

            <if test="plant != null">
                 and il.plant = #{plant}
            </if>
            <if test="orderno != null">
                and il.orderno = #{orderno}
            </if>
            <if test="operation != null">
                and il.operation = #{operation}
            </if>
            <if test="material != null">
                and r.material = #{material}
            </if>
            <if test="creatDate != null">
                and il.creatDate = #{CREATION_DATE}
            </if>

            <if test="postingDateAfter != null and postingDateBefore != null">
                and posting_date BETWEEN  #{postingDateAfter} AND  #{postingDateBefore}
            </if>
        </where>




